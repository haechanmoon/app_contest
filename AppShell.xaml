<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShinhanLostAndFound.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShinhanLostAndFound"
    xmlns:pages="clr-namespace:ShinhanLostAndFound.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="분실물 목록">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="내 소지품">
            <ShellContent ContentTemplate="{DataTemplate pages:MyItemsPage}" Route="MyItemsPage" />
        </Tab>
    </TabBar>

</Shell>